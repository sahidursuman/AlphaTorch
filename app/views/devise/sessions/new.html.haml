.row
  .col-md-4.col-md-offset-4.well
    .row
      .col-md-10.col-md-offset-1
        %center.h4
          Sign In
        = form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {:class => 'form-vertical'}) do |f|
          .row
            .col-md-12.h6
              = flash[:alert]
            .col-md-12
              = f.text_field :email, :required => true, class:'form-control', placeholder:'Email', autocomplete:'off'
          .row
            .col-md-12
              = f.password_field :password, :required => true, class:'form-control', placeholder:'Password'
          = f.submit 'Sign In', :class => 'btn btn-sm btn-success'
    %hr
    .row
      .col-md-10.col-md-offset-1
        = link_to "Sign Up",
        new_registration_path(resource_name),
        class:'btn btn-xs btn-default'
        = link_to "Forgot Password",
        new_password_path(resource_name),
        class:'btn btn-xs btn-default'