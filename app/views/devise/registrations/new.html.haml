.row
  .col-md-4.col-md-offset-4.well
    .row
      .col-md-10.col-md-offset-1
        %center.h4
          Sign Up
        = form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {:class => 'form-vertical' }) do |f|
          .row
            .col-md-12
              = f.text_field :email, :required => true, class:'form-control', placeholder:'Email', autocomplete:'off'
          .row
            .col-md-12
              = f.password_field :password, :required => true, class:'form-control', placeholder:'Password'
          .row
            .col-md-12
              = f.password_field :password_confirmation, :required => true, class:'form-control', placeholder:'Confirm'
          = f.submit 'Sign up', :class => 'btn btn-sm btn-success'
    %hr
    .row
      .col-md-10.col-md-offset-1
        = link_to "Sign In",
        new_session_path(resource_name),
        class:'btn btn-xs btn-default'
