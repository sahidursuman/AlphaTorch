.row
  .col-md-4.col-md-offset-4.well
    .row
      .col-md-10.col-md-offset-1
        %center.h4
          Edit #{resource_name.to_s.humanize}
        = form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put, :class => 'form-vertical' }) do |f|
          .row
            .col-md-12
              = f.text_field :email,
              :required => true,
              placeholder:'Email',
              class:'form-control',
              autocomplete:'off'
          .row
            .col-md-12
              = f.password_field :password, :autocomplete => "off",
              :hint => "leave it blank if you don't want to change it",
              :required => false,
              placeholder:'New Password',
              class:'form-control'
          .row
            .col-md-12
              = f.password_field :password_confirmation,
              :required => false,
              placeholder:'Confirm',
              class:'form-control'
          .row
            .col-md-12
              = f.password_field :current_password,
              :hint => "we need your current password to confirm your changes",
              :required => true,
              placeholder:'Current Password',
              class:'form-control'

          = f.submit 'Update', :class => 'btn btn-sm btn-success'
    %hr
    .row
      .col-md-10.col-md-offset-1
        = link_to "Back",
        :back,
        class:'btn btn-xs btn-default'
        = link_to "Cancel This Account",
        registration_path(resource_name),
        data: { :confirm => "Are you sure?" },
        method: :delete,
        class:'btn btn-xs btn-default'

