- if current_user
  %nav.navbar.navbar-fixed-top.navbar-default{role: "navigation"}
    .container-fluid
      .navbar-header
        %button.navbar-toggle{data:{target:'.collapse', toggle:'collapse'}}
          %span.sr-only Toggle navigation
          %span.icon-bar
          %span.icon-bar
          %span.icon-bar
        %a.navbar-brand{href: "#{root_path}"}
          .h4{style:'margin-top:0px;'}='Cortez Landscaping'
      .collapse.navbar-collapse
        %form.navbar-form.navbar-left{action:search_path, method:'get', remote:'true', role: 'search'}
          %input#site-search.search_field.form-control{name:'term', type:'text', placeholder:'Search...', autocomplete:'off'}
        = render 'layouts/navigation_links'