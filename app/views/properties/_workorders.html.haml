%table#workorders.table
  %caption
    Workorders
    = link_to content_tag(:i, nil, {class:'glyphicon glyphicon-plus pull-right', style:'color:green;'}), new_workorder_path(customer_property_id: @property.current_customer_property), remote:true
  - if @property.workorders
    %thead
      %tr
        %th.h5='Name'
        %th.h5='Status'
    %tbody
      - @property.workorders.each do |workorder|
        %tr
          %td.h6= link_to workorder.name, workorder
          %td.h6= workorder.status_name