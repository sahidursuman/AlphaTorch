!!!
%html
  %head
    %meta{:name => "viewport", :content => "width=device-width, initial-scale=1.0"}
    %title= content_for?(:title) ? yield(:title) : 'Cortez Landscaping'
    %meta{:name => "description", :content => "#{content_for?(:description) ? yield(:description) : 'Cortez Landscaping'}"}
    = stylesheet_link_tag "application", media: "all"
    = stylesheet_link_tag "//cdnjs.cloudflare.com/ajax/libs/x-editable/1.5.0/bootstrap3-editable/css/bootstrap-editable.css"
    - unless controller_name == 'home'
      = stylesheet_link_tag controller_name.pluralize
    - else
      = stylesheet_link_tag controller_name
    = csrf_meta_tags
  %body
    .container
      #header= render 'layouts/navigation'
      #main{:role => "main"}
        #content
          = render 'layouts/messages'
          = yield



    #ajax-modal.modal.fade
      .modal-dialog.modal-lg
        .modal-content
          .modal-header
            %button.close{"aria-hidden" => "true", "data-dismiss" => "modal", type: "button"} &times;
            %h4.modal-title

          .modal-body

          .modal-footer
            #error_explanation
            %button#modal-submit.btn.btn-primary.btn-lg Submit

    = javascript_include_tag 'application'
    = javascript_include_tag "//cdnjs.cloudflare.com/ajax/libs/x-editable/1.5.0/bootstrap3-editable/js/bootstrap-editable.min.js"
    = javascript_include_tag controller_name