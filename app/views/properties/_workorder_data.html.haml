.row
  - if @workorder
    .col-md-8{style:'height:300px; overflow-y: scroll; overflow-x: hidden;'}
      .row
        %table.table.table-hover
          %caption.h4
            = @workorder.name + ' Services'
            = link_to content_tag(:i, nil, {class:'glyphicon glyphicon-plus pull-right', style:'color:green;'}),
                  new_workorder_workorder_service_path(workorder_id:@workorder.id),
                  remote:true,
                  id:'new_workorder_service_link'
          %thead
            %tr
              %th= 'Service Name'
              %th= 'Schedule'
              %th= 'Cost'
              %th
          %tbody
            - @workorder.workorder_services.each do |wo_service|
              %tr
                %td.col-md-2= wo_service.service.name
                %td.col-md-4= wo_service.converted_schedule.to_s
                %td.col-md-1= humanized_money_with_symbol(wo_service.cost)
                %td.col-md-2
                  .row
                    .col-md-6
                      =link_to 'Edit', edit_workorder_workorder_service_path(@workorder, wo_service),
                      class:'btn btn-xs btn-default', remote:true, id:'edit_workorder_service_link'

                    .col-md-6.delete_workorder_service
                      =link_to 'Delete', workorder_workorder_service_path(@workorder, wo_service), method: :delete,
                      class:'btn btn-xs btn-danger', confirm: 'Are You Sure?', remote:true, id:'delete_workorder_service_link'

    .col-md-4
      #workorder-service-helper-area

  - else
    %center.col-md-12
      .h4
        No work order selected. Select One From Above.
      .h6
        (Go on. You know you want to.)